{
  "compilerOptions": {
    "module": "CommonJS",
    "lib": ["ES2024", "DOM"],
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",                               
    "strict": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "typeRoots": [
      "./node_modules/@types",
      "src/framework/types"                                  
    ]
  },
  "include": ["src/**/*.ts", "features/**/*.ts", "index.ts","src/framework/types/env.d.ts"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts", "**/*.test.ts"]
}